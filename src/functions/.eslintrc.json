{
  "env": {
    "es6": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "extends": [
    "eslint:recommended",
    "google"
  ],
  "rules": {
    "no-restricted-globals": ["error", "name", "length"],
    "prefer-arrow-callback": "error",
    "quotes": ["error", "single", {"allowTemplateLiterals": true}],
    "object-curly-spacing": ["error", "always"],
    "max-len": ["error", { "code": 120 }],
    "arrow-parens": ["error", "as-needed"],
    "require-jsdoc": "off"
  },
  "overrides": [
    {
      "files": ["**/*.spec.*"],
      "env": {
        "mocha": true
      },
      "rules": {}
    }
  ]
}
