{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "src/client",
  "projects": {
    "linqua": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        },
        "@schematics/angular:application": {
          "strict": true
        }
      },
      "root": "src/client",
      "sourceRoot": "src/client",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular/build:application",
          "options": {
            "outputPath": {
              "base": "dist/wwwroot",
              "browser": ""
            },
            "index": "src/client/index.html",
            "polyfills": ["src/client/polyfills.ts"],
            "tsConfig": "src/client/tsconfig.app.json",
            "inlineStyleLanguage": "scss",
            "stylePreprocessorOptions": {
              "includePaths": ["src/client/styles"]
            },
            "assets": [
              {
                "glob": "**/*",
                "input": "src/client/assets",
                "output": "/assets"
              },
              {
                "glob": "favicon.ico",
                "input": "src/client",
                "output": "/"
              },
              "src/client/manifest.webmanifest"
            ],
            "styles": ["src/client/styles/theme.scss", "src/client/styles/styles.scss"],
            "scripts": [],
            "preserveSymlinks": true,
            "browser": "src/client/main.ts"
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "500kb",
                  "maximumError": "2mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "2kb",
                  "maximumError": "4kb"
                }
              ],
              "fileReplacements": [
                {
                  "replace": "src/client/environments/environment.ts",
                  "with": "src/client/environments/environment.prod.ts"
                }
              ],
              "outputHashing": "all",
              "serviceWorker": "src/client/ngsw-config.json"
            },
            "development": {
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true,
              "namedChunks": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular/build:dev-server",
          "configurations": {
            "production": {
              "buildTarget": "linqua:build:production"
            },
            "development": {
              "buildTarget": "linqua:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "extract-i18n": {
          "builder": "@angular/build:extract-i18n",
          "options": {
            "buildTarget": "linqua:build"
          }
        },
        "test": {
          "builder": "@angular/build:karma",
          "options": {
            "main": "src/client/test.ts",
            "polyfills": ["src/client/polyfills.ts"],
            "tsConfig": "src/client/tsconfig.spec.json",
            "karmaConfig": "src/client/karma.conf.js",
            "inlineStyleLanguage": "scss",
            "styles": ["src/client/styles/theme.scss", "src/client/styles/styles.scss"],
            "assets": [
              {
                "glob": "**/*",
                "input": "src/client/assets",
                "output": "/assets"
              },
              {
                "glob": "favicon.ico",
                "input": "src/client",
                "output": "/"
              },
              "src/client/manifest.webmanifest"
            ],
            "scripts": [],
            "fileReplacements": [
              {
                "replace": "src/client/environments/environment.ts",
                "with": "src/client/environments/environment.test.ts"
              }
            ]
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": ["src/client/**/*.ts", "src/client/**/*.html"]
          }
        },
        "e2e": {
          "builder": "playwright-ng-schematics:playwright",
          "options": {
            "devServerTarget": "linqua:serve:development"
          },
          "configurations": {
            "production": {
              "devServerTarget": "linqua:serve:production"
            }
          }
        }
      }
    }
  },
  "cli": {
    "analytics": false,
    "schematicCollections": [
      "angular-eslint"
    ]
  },
  "schematics": {
    "@schematics/angular:component": {
      "type": "component"
    },
    "@schematics/angular:directive": {
      "type": "directive"
    },
    "@schematics/angular:service": {
      "type": "service"
    },
    "@schematics/angular:guard": {
      "typeSeparator": "."
    },
    "@schematics/angular:interceptor": {
      "typeSeparator": "."
    },
    "@schematics/angular:module": {
      "typeSeparator": "."
    },
    "@schematics/angular:pipe": {
      "typeSeparator": "."
    },
    "@schematics/angular:resolver": {
      "typeSeparator": "."
    }
  }
}
