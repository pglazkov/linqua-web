{
  "name": "linqua",
  "version": "1.1.0",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "run-p --race start:firebase-emulators:backend start:ng:development",
    "start:ng:development": "ng serve --configuration development",
    "start:ng:production": "ng serve --configuration production",
    "start:prod": "http-server dist/wwwroot -p 8080 --proxy https://linqua-app.com",
    "start:prod:e2e": "run-p --race start:prod e2e:watch",
    "start:firebase-emulators:only-functions": "firebase emulators:start --only functions",
    "start:firebase-emulators:backend": "firebase emulators:start --only functions,auth,firestore --inspect-functions 9229",
    "build": "ng build --configuration development",
    "build:prod": "ng build --configuration production",
    "test:watch": "ng test",
    "ng-test": "ng test --watch=false --no-progress --browsers=ChromeHeadlessCI",
    "test": "firebase emulators:exec --only functions,auth,firestore './test.sh'",
    "lint": "ng lint",
    "e2e": "playwright test",
    "e2e:watch": "playwright test --ui",
    "e2e:ng": "ng e2e",
    "e2e:ng:prod": "ng e2e --configuration production",
    "e2e:ci": "firebase emulators:exec --only functions,auth,firestore './e2e-ci.sh'",
    "http-server": "http-server",
    "npm-run-all": "npm-run-all",
    "ci": "run-s lint test e2e:ci build:prod",
    "deploy:firebase": "firebase deploy",
    "deploy:firebase:hosting": "firebase deploy --only hosting",
    "deploy": "run-s ci deploy:firebase",
    "deploy:only-frontend": "run-s ci deploy:firebase:hosting",
    "deploy:only-frontend:skip-ci": "run-s build:prod deploy:firebase:hosting"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^18.2.12",
    "@angular/cdk": "^18.2.13",
    "@angular/common": "^18.2.12",
    "@angular/compiler": "^18.2.12",
    "@angular/core": "^18.2.12",
    "@angular/forms": "^18.2.12",
    "@angular/material": "^18.2.13",
    "@angular/platform-browser": "^18.2.12",
    "@angular/platform-browser-dynamic": "^18.2.12",
    "@angular/router": "^18.2.12",
    "@angular/service-worker": "^18.2.12",
    "firebase": "~11.0.2",
    "lodash-es": "^4.17.21",
    "ng-firebase-lite": "^3.0.1",
    "rxjs": "~7.5.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.10"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^18.2.12",
    "@angular-eslint/builder": "18.4.0",
    "@angular-eslint/eslint-plugin": "18.4.0",
    "@angular-eslint/eslint-plugin-template": "18.4.0",
    "@angular-eslint/schematics": "18.4.0",
    "@angular-eslint/template-parser": "18.4.0",
    "@angular/cli": "^18.2.12",
    "@angular/compiler-cli": "^18.2.12",
    "@playwright/test": "1.48.2",
    "@types/jasmine": "~3.10.0",
    "@types/lodash-es": "^4.17.0",
    "@types/node": "^12.11.1",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "eslint": "^8.57.0",
    "http-server": "^14.1.0",
    "jasmine-core": "~4.0.0",
    "karma": "~6.3.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.1.0",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "~1.7.0",
    "npm-run-all": "^4.1.5",
    "playwright-ng-schematics": "1.1.1",
    "ts-node": "~10.7.0",
    "typescript": "~5.5.4"
  }
}
